// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger

[
  {
    "label": "Debug MoreCompute in Chrome",
    "adapter": "JavaScript",
    "type": "chrome",
    "request": "launch",
    "url": "http://localhost:8888",
    "webRoot": "${ZED_WORKTREE_ROOT}/morecompute",
    "skipFiles": ["<node_internals>/**"]
  },
  {
    "label": "Attach to Chrome (MoreCompute)",
    "adapter": "JavaScript",
    "type": "chrome",
    "request": "attach",
    "port": 9222,
    "webRoot": "${ZED_WORKTREE_ROOT}/morecompute",
    "skipFiles": ["<node_internals>/**"]
  }
]
